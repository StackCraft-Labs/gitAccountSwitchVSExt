{
  "manifest_version": 3,
  "name": "Hello World â€” House Gallery",
  "version": "1.0.0",
  "description": "Type 'hello world' in Google, Bing, Yahoo, or DuckDuckGo to open a curated house image gallery.",

  "host_permissions": [
    "https://pixabay.com/api/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.bing.com/search*",
        "https://search.yahoo.com/search*",
        "https://duckduckgo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["gallery.html", "gallery.js", "gallery.css", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Hello World House Gallery",
    "default_icon": {
      "16":  "icons/icon16.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
